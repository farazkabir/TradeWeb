<style>
   #IsUser{
       min-width:0;
       margin-right:1rem;
   }
   #user-label{
       width:auto;
       font-size:2rem;
   }
</style>

@using (Html.BeginForm("Search", "Post", FormMethod.Post, new { @class = "form-inline search-form" }))
{
    <div class="container d-flex justify-content-center align-items-center" style="flex-direction:column">
        <div class="form-group d-flex w-100 justify-content-center" >
            <label for="Search" class="sr-only">Search</label>
            <input type="text" name="Search" class="form-control" style="display:inline" id="search" placeholder="Write here">
            <button type="submit" class="color2-btn">Search</button>
        </div>
        <div class="form-group">

            @Html.CheckBox("IsUser")
            <label for="IsUser" id="user-label" style="display:inline">Check this if you want to search User</label>

        </div>
       


    </div>
   
    
}
